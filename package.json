{
  "name": "loadable.ts",
  "description": "Type-safe loading states for TypeScript",
  "author": "Dirk Luijk <mail@dirkluijk.nl>",
  "repository": {
    "type": "git",
    "url": "https://github.com/dirkluijk/loadable-ts.git"
  },
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "commit": "git-cz",
    "start": "ng serve demo",
    "build": "ng build --configuration production && yarn copy:docs",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "copy:docs": "cp ./*.md ./LICENSE dist/loadable-ts",
    "release": "cd projects/loadable-ts && standard-version --infile ../../CHANGELOG.md && cd .. && yarn build"
  },
  "private": false,
  "dependencies": {
    "@angular/common": "~13.3.11",
    "@angular/compiler": "~13.3.11",
    "@angular/core": "~13.3.11",
    "@angular/forms": "~13.3.11",
    "@angular/platform-browser": "~13.3.11",
    "@angular/platform-browser-dynamic": "~13.3.11",
    "rxjs": "~6.6.2",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "^10.0.0",
    "@angular-devkit/build-angular": "~13.3.8",
    "@angular/cli": "~13.3.8",
    "@angular/animations": "~13.3.11",
    "@angular/router": "~13.3.11",
    "@angular/compiler-cli": "~13.3.11",
    "@angular/language-service": "~13.3.11",
    "@commitlint/cli": "^9.1.0",
    "@commitlint/config-conventional": "^9.1.0",
    "@dirkluijk/observable-matchers": "^0.3.2",
    "@dscheerens/tslint-presets": "^8.0.0",
    "@ngneat/spectator": "^5.0.0",
    "@types/jest": "^26.0.0",
    "@types/node": "^12.11.1",
    "all-contributors-cli": "^6.8.2",
    "codelyzer": "^6.0.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^4.2.0",
    "jest": "^26.0.0",
    "ng-packagr": "^13.3.1",
    "standard-version": "^9.0.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.6.4"
  },
  "resolutions": {
    "webpack": "^5.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
