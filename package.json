{
    "name": "loadable.ts",
    "description": "Type-safe loading states for TypeScript",
    "author": "Dirk Luijk <mail@dirkluijk.nl>",
    "repository": {
        "type": "git",
        "url": "https://github.com/dirkluijk/loadable-ts.git"
    },
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "commit": "git-cz",
        "start": "ng serve demo",
        "build": "ng build --prod && yarn copy:docs",
        "test": "ng test",
        "lint": "ng lint",
        "contributors:add": "all-contributors add",
        "contributors:generate": "all-contributors generate",
        "copy:docs": "cp ./*.md ./LICENSE dist/loadable-ts",
        "release": "cd projects/loadable-ts && standard-version --infile ../../CHANGELOG.md && cd .. && yarn build"
    },
    "private": false,
    "dependencies": {
        "@angular/common": "~11.2.8",
        "@angular/compiler": "~11.2.8",
        "@angular/core": "~11.2.8",
        "@angular/forms": "~11.2.8",
        "@angular/platform-browser": "~11.2.8",
        "@angular/platform-browser-dynamic": "~11.2.8",
        "rxjs": "~6.6.2",
        "tslib": "^2.0.0",
        "zone.js": "~0.10.2"
    },
    "devDependencies": {
        "@angular-builders/jest": "^10.0.0",
        "@angular-devkit/build-angular": "~0.1102.7",
        "@angular/cli": "~11.2.7",
        "@angular/animations": "~11.2.8",
        "@angular/router": "~11.2.8",
        "@angular/compiler-cli": "~11.2.8",
        "@angular/language-service": "~11.2.8",
        "@commitlint/cli": "^9.1.0",
        "@commitlint/config-conventional": "^9.1.0",
        "@dirkluijk/observable-matchers": "^0.3.2",
        "@dscheerens/tslint-presets": "^8.0.0",
        "@ngneat/spectator": "^5.0.0",
        "@types/jest": "^26.0.0",
        "@types/node": "^12.11.1",
        "all-contributors-cli": "^6.8.2",
        "codelyzer": "^6.0.0",
        "commitizen": "^4.0.3",
        "cz-conventional-changelog": "^3.0.2",
        "husky": "^4.2.0",
        "jest": "^26.0.0",
        "ng-packagr": "^11.2.4",
        "standard-version": "^9.0.0",
        "ts-node": "~7.0.0",
        "tslint": "~6.1.0",
        "typescript": "~4.1.5"
    },
    "resolutions": {
        "webpack": "^5.0.0"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
